<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <header>
                        <TCEforms>
                            <label>LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:cards.title</label>
                            <config>
                                <type>input</type>
                                <size>20</size>
                            </config>
                        </TCEforms>
                    </header>
                    <intro>
                        <TCEforms>
                            <label>LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:teasercards.intro</label>
                            <config>
                                <type>text</type>
                                <cols>24</cols>
                                <rows>3</rows>
                            </config>
                        </TCEforms>
                    </intro>
                    <backgroundcolor>
                        <TCEforms>
                            <label>LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:cards.backgroundcolor</label>
                            <config>
                                <type>select</type>
                                <default>none.gif</default>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0"></numIndex>
                                    </numIndex>
                                </items>
                                <fileFolder>EXT:lth_package/Resources/Public/Icons/SysColors/</fileFolder>
                                <fileFolder_extList>png,jpg,jpeg,gif</fileFolder_extList>
                                <fileFolder_recursions>0</fileFolder_recursions>
                                <size>1</size>
                                <minitems>0</minitems>
                                <maxitems>1</maxitems>
                                <selicon_cols>8</selicon_cols>
                            </config>
                        </TCEforms>
                    </backgroundcolor>
                    <buttons>
                        <section>1</section>
                        <type>array</type>
                        <label>Buttons</label>
                        <el>
                            <container>
                                <title>Button</title>
                                <type>array</type>
                                <el>
                                    <title>
                                        <TCEforms>
                                            <label>Title</label>
                                            <config>
                                                <type>input</type>
                                                <size>30</size>
                                            </config>
                                        </TCEforms>
                                    </title>
                                    <link>
                                        <TCEforms>
                                            <exclude>1</exclude>
                                            <label>Link to Page</label>
                                            <config>
                                                <type>input</type>
                                                <size>30</size>
                                                <eval>trim</eval>
                                                <softref>typolink</softref>
                                                <wizards>
                                                    <_PADDING>2</_PADDING>
                                                    <link>
                                                        <type>popup</type>
                                                        <title>Link</title>
                                                        <icon>EXT:backend/Resources/Public/Images/FormFieldWizard/wizard_link.gif</icon>
                                                        <module type="array">
                                                            <name>wizard_link</name>
                                                        </module>
                                                        <icon>link_popup.gif</icon>
                                                        <JSopenParams>height=500,width=500,status=0,menubar=0,scrollbars=1</JSopenParams>
                                                    </link>
                                                </wizards>
                                            </config>
                                        </TCEforms>
                                    </link>
                                    </el>
                                </container>
                            </el>
                    </buttons>
                    <cards>
                        <section>1</section>
                        <type>array</type>
                        <label>Cards</label>
                        <el>
                            <container>
                                <title>Card</title>
                                <type>array</type>
                                <el>
                                    <title>
                                        <TCEforms>
                                            <label>Title</label>
                                            <config>
                                                <type>input</type>
                                                <size>30</size>
                                            </config>
                                        </TCEforms>
                                    </title>
                                    <bodytext>
                                        <TCEforms>
                                            <label>Bodytext</label>
                                            <config>
                                                <type>text</type>
                                                <cols>24</cols>
                                                <rows>3</rows>
                                            </config>
                                        </TCEforms>
                                    </bodytext>
                                    <link>
                                            <TCEforms>
                                                <exclude>1</exclude>
                                                <label>Link to Page</label>
                                                <config>
                                                    <type>input</type>
                                                    <size>30</size>
                                                    <eval>trim</eval>
                                                    <softref>typolink</softref>
                                                    <wizards>
                                                        <_PADDING>2</_PADDING>
                                                        <link>
                                                            <type>popup</type>
                                                            <title>Link</title>
                                                            <icon>EXT:backend/Resources/Public/Images/FormFieldWizard/wizard_link.gif</icon>
                                                            <module type="array">
                                                                <name>wizard_link</name>
                                                            </module>
                                                            <icon>link_popup.gif</icon>
                                                            <JSopenParams>height=500,width=500,status=0,menubar=0,scrollbars=1</JSopenParams>
                                                        </link>
                                                    </wizards>
                                                </config>
                                            </TCEforms>
                                        </link>
                                        <readMoreLinkText>
                                            <TCEforms>
                                                <label>Read-More Text (text on read-more-link)</label>
                                                <config>
                                                    <type>input</type>
                                                    <size>20</size>
                                                </config>
                                            </TCEforms>
                                        </readMoreLinkText>
                                        <cardImage>
                                            <TCEforms>
                                                <label>LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:card.image</label>
                                                <config>
                                                    <type>group</type>
                                                    <internal_type>db</internal_type>
                                                    <appearance>
                                                        <elementBrowserType>file</elementBrowserType>
                                                        <elementBrowserAllowed>jpg,jpeg,png,gif</elementBrowserAllowed>
                                                    </appearance>
                                                    <allowed>sys_file</allowed>
                                                    <size>1</size>
                                                    <minitems>0</minitems>
                                                    <maxitems>1</maxitems>
                                                    <show_thumbs>1</show_thumbs>
                                                </config>
                                            </TCEforms>
                                        </cardImage>
                                    </el>
                                </container>
                            </el>
                    </cards>
                    <fixColorBoxes>
                        <TCEforms>
                            <config>
                                <type>user</type>
                                <userFunc>user_lthpackageflex_addFieldsToFlexForm->fixColorBoxes</userFunc>
                            </config>
                        </TCEforms>
                    </fixColorBoxes>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>