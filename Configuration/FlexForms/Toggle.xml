<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <toggletype>
                        <TCEforms>
                            <label>LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:infobox.type</label>
                            <onChange>reload</onChange>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <default>accordion</default>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:toggle.type.accordion</numIndex>
                                        <numIndex index="1">accordion</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:toggle.type.cardA</numIndex>
                                        <numIndex index="1">cardA</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:toggle.type.cardB</numIndex>
                                        <numIndex index="1">cardB</numIndex>
                                    </numIndex>
                                    <numIndex index="3" type="array">
                                        <numIndex index="0">LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:toggle.type.cardC</numIndex>
                                        <numIndex index="1">cardC</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </toggletype>
                    <backgroundcolor>
                        <TCEforms>
                            <label>LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:toggle.backgroundcolor</label>
                            <displayCond>FIELD:toggletype:IN:cardA,cardB,cardC</displayCond>
                            <config>
                                <type>select</type>
                                <default>none.gif</default>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0"></numIndex>
                                    </numIndex>
                                </items>
                                <fileFolder>EXT:lth_package/Resources/Public/Icons/SysColors/</fileFolder>
                                <fileFolder_extList>png,jpg,jpeg,gif</fileFolder_extList>
                                <fileFolder_recursions>0</fileFolder_recursions>
                                <size>1</size>
                                <minitems>0</minitems>
                                <maxitems>1</maxitems>
                                <selicon_cols>8</selicon_cols>
                            </config>
                        </TCEforms>
                    </backgroundcolor>
                    <toggleShow>
                        <TCEforms>
                            <label>LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:toggle.show</label>
                            <displayCond>FIELD:toggletype:IN:cardA,cardB,cardC</displayCond>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <default></default>
                            </config>
                        </TCEforms>
                    </toggleShow>
                    <toggleHide>
                        <TCEforms>
                            <label>LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:toggle.hide</label>
                            <displayCond>FIELD:toggletype:IN:cardA,cardB,cardC</displayCond>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <default></default>
                            </config>
                        </TCEforms>
                    </toggleHide>
                    <teaser>
                        <TCEforms>
                            <label>LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:toggle.teaser</label>
                            <displayCond>FIELD:toggletype:IN:cardA,cardC</displayCond>
                            <config>
                                <type>text</type>
                                <cols>48</cols>
                                <rows>5</rows>
                            </config>
                            <defaultExtras>richtext[*]:rte_transform[mode=ts_css]</defaultExtras>
                        </TCEforms>
                    </teaser>
                    <bodytext>
                        <TCEforms>
                            <label>LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:toggle.bodytext</label>
                            <displayCond>FIELD:toggletype:IN:cardA,cardB,cardC</displayCond>
                            <config>
                                <type>text</type>
                                <cols>48</cols>
                                <rows>5</rows>
                            </config>
                            <defaultExtras>richtext[*]:rte_transform[mode=ts_css]</defaultExtras>
                        </TCEforms>
                    </bodytext>
                    <toggleItems>
                        <section>1</section>
                        <type>array</type>
                        <displayCond>FIELD:toggletype:IN:accordion</displayCond>
                        <el>
                            <container>
                                <title>Toggle item</title>
                                <type>array</type>
                                <el>
                                    <toggleshowhide>
                                        <TCEforms>
                                            <label>LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:toggle.showhide</label>
                                            <displayCond>FIELD:toggletype:IN:accordion</displayCond>
                                            <config>
                                                <type>input</type>
                                                <size>20</size>
                                                <default></default>
                                            </config>
                                        </TCEforms>
                                    </toggleshowhide>
                                    <bodytext>
                                        <TCEforms>
                                            <label>LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:toggle.bodytext</label>
                                            <displayCond>FIELD:toggletype:IN:accordion</displayCond>
                                            <config>
                                                <type>text</type>
                                                <cols>48</cols>
                                                <rows>5</rows>
                                            </config>
                                            <defaultExtras>richtext[*]:rte_transform[mode=ts_css]</defaultExtras>
                                        </TCEforms>
                                    </bodytext>
                                </el>
                            </container>
                        </el>
                    </toggleItems>
                    <toggleImage>
                        <TCEforms>
                            <label>LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:toggle.image</label>
                            <displayCond>FIELD:toggletype:IN:cardA,cardB</displayCond>
                            <config>
                            <type>inline</type>
                            <foreign_table>sys_file_reference</foreign_table>
                            <!--<foreign_field>uid_foreign</foreign_field>-->
                            <foreign_sortby>sorting_foreign</foreign_sortby>
                            <foreign_table_field>tablenames</foreign_table_field>
                            <foreign_match_fields>
                            <fieldname>toggleImage</fieldname> <!-- CAUTION!! Replace "fal" with the variable name of this field! -->
                            </foreign_match_fields>
                            <foreign_label>uid_local</foreign_label>
                            <foreign_selector>uid_local</foreign_selector>
                            <foreign_selector_fieldTcaOverride>
                            <config>
                            <appearance>
                            <elementBrowserType>file</elementBrowserType>
                            <elementBrowserAllowed>gif,jpg,jpeg,png,pdf</elementBrowserAllowed>
                            </appearance>
                            </config>
                            </foreign_selector_fieldTcaOverride>
                            <foreign_types type="array">
                            <numIndex index="2">
                            <showitem>--palette--;LLL:EXT:lang/locallang_tca.xlf:sys_file_reference.imageoverlayPalette;imageoverlayPalette,--palette--;;filePalette</showitem>
                            </numIndex>
                            </foreign_types>
                            <minitems>0</minitems>
                            <maxitems>1</maxitems>
                            <appearance>
                            <useSortable>1</useSortable>
                            <headerThumbnail>
                            <field>uid_local</field>
                            <width>45c</width>
                            <height>45</height>
                            </headerThumbnail>

                            <showPossibleLocalizationRecords>0</showPossibleLocalizationRecords>
                            <showRemovedLocalizationRecords>0</showRemovedLocalizationRecords>
                            <showSynchronizationLink>0</showSynchronizationLink>
                            <useSortable>1</useSortable>
                            <enabledControls>
                            <info>1</info>
                            <new>0</new>
                            <dragdrop>0</dragdrop>
                            <sort>1</sort>
                            <hide>1</hide>
                            <delete>1</delete>
                            <localize>1</localize>
                            </enabledControls>

                            <createNewRelationLinkTitle>LLL:EXT:cms/locallang_ttc.xlf:images.addFileReference</createNewRelationLinkTitle>
                            </appearance>

                            <behaviour>
                            <localizationMode>select</localizationMode>
                            <localizeChildrenAtParentLocalization>1</localizeChildrenAtParentLocalization>
                            </behaviour>
                            </config>
                        </TCEforms>
                    </toggleImage>
                    <fixColorBoxes>
                        <TCEforms>
                            <config>
                                <type>user</type>
                                <userFunc>user_lthpackageflex_addFieldsToFlexForm->fixColorBoxes</userFunc>
                            </config>
                        </TCEforms>
                    </fixColorBoxes>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>