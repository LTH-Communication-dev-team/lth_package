<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:lth_package/Resources/Private/Language/Backend.xlf:settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                    <el>
                        <navigationType>
                            <TCEforms>
                                <label>Navigation Type</label>
                                <onChange>reload</onChange>
                                <config>
                                    <type>select</type>
                                    <renderType>selectSingle</renderType>
                                    <default>navigationBlock</default>
                                    <items type="array">
                                        <numIndex index="0" type="array">
                                            <numIndex index="0">Navigation Block</numIndex>
                                            <numIndex index="1">navigationBlock</numIndex>
                                        </numIndex>
                                        <numIndex index="1" type="array">
                                            <numIndex index="0">Sub Navigation</numIndex>
                                            <numIndex index="1">subNavigation</numIndex>
                                        </numIndex>
                                        <numIndex index="2" type="array">
                                            <numIndex index="0">Breadcrumb Navigation</numIndex>
                                            <numIndex index="1">breadcrumbNavigation</numIndex>
                                        </numIndex>
                                    </items>
                                </config>
                            </TCEforms>
                        </navigationType>
                        <navblockTitle>
                            <TCEforms>
                                <label>Title</label>
                                <displayCond>FIELD:navigationType:IN:navigationBlock</displayCond>
                                <config>
                                    <type>input</type>
                                    <size>48</size>
                                </config>
                            </TCEforms>
                        </navblockTitle>
                        <navblockSubtitle>
                            <TCEforms>
                                <label>Subtitle</label>
                                <displayCond>FIELD:navigationType:IN:navigationBlock</displayCond>
                                    <config>
                                        <type>text</type>
                                        <cols>24</cols>
                                        <rows>3</rows>
                                    </config>
                            </TCEforms>
                        </navblockSubtitle>
                    
                        <navblockLinks>
                            <section>1</section>
                            <displayCond>FIELD:navigationType:IN:navigationBlock</displayCond>
                            <type>array</type>
                            <el>
                                <container>
                                    <title>Link</title>
                                    <type>array</type>
                                    <el>
                                        <linktext>
                                            <TCEforms>
                                                <label>Link text</label>
                                                <config>
                                                    <type>input</type>
                                                    <size>48</size>
                                                </config>
                                            </TCEforms>
                                        </linktext>
                                        <link>
                                            <TCEforms>
                                                <label>Link</label>
                                                <config>
                                                    <type>input</type>
                                                    <size>48</size>
                                                </config>
                                            </TCEforms>
                                        </link>
                                    </el>
                                </container>
                            </el>
                        </navblockLinks>                    
                    </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>