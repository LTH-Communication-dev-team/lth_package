<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <header>
                        <TCEforms>
                            <label>LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:masonrytile.header</label>
                            <config>
                                <type>input</type>
                                <size>30</size>
                                <default></default>
                            </config>
                        </TCEforms>
                    </header>
                    <bodytext>
                        <TCEforms>
                            <label>LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:masonrytile.bodytext</label>
                            <config>
                                <type>text</type>
                                <cols>24</cols>
                                <rows>3</rows>
                            </config>
                        </TCEforms>
                    </bodytext>
                    <masonryTileImage>
                        <TCEforms>
                            <label>LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:masonrytile.image</label>
                            <config>
                                <type>inline</type>
                                <foreign_table>sys_file_reference</foreign_table>
                                <!--<foreign_field>uid_foreign</foreign_field>-->
                                <foreign_sortby>sorting_foreign</foreign_sortby>
                                <foreign_table_field>tablenames</foreign_table_field>
                                <foreign_match_fields>
                                <fieldname>masonryTileImage</fieldname> <!-- CAUTION!! Replace "fal" with the variable name of this field! -->
                                </foreign_match_fields>
                                <foreign_label>uid_local</foreign_label>
                                <foreign_selector>uid_local</foreign_selector>
                                <foreign_selector_fieldTcaOverride>
                                    <config>
                                        <appearance>
                                            <elementBrowserType>file</elementBrowserType>
                                            <elementBrowserAllowed>gif,jpg,jpeg,png,pdf</elementBrowserAllowed>
                                        </appearance>
                                    </config>
                                </foreign_selector_fieldTcaOverride>
                                <foreign_types type="array">
                                    <numIndex index="2">
                                    <showitem>--palette--;LLL:EXT:lang/locallang_tca.xlf:sys_file_reference.imageoverlayPalette;imageoverlayPalette,--palette--;;filePalette</showitem>
                                    </numIndex>
                                </foreign_types>
                                <minitems>0</minitems>
                                <maxitems>1</maxitems>
                                <appearance>
                                    <useSortable>1</useSortable>
                                    <headerThumbnail>
                                        <field>uid_local</field>
                                        <width>45c</width>
                                        <height>45</height>
                                    </headerThumbnail>
                                    <showPossibleLocalizationRecords>0</showPossibleLocalizationRecords>
                                    <showRemovedLocalizationRecords>0</showRemovedLocalizationRecords>
                                    <showSynchronizationLink>0</showSynchronizationLink>
                                    <useSortable>1</useSortable>
                                    <enabledControls>
                                        <info>1</info>
                                        <new>0</new>
                                        <dragdrop>0</dragdrop>
                                        <sort>1</sort>
                                        <hide>1</hide>
                                        <delete>1</delete>
                                        <localize>1</localize>
                                    </enabledControls>
                                    <createNewRelationLinkTitle>LLL:EXT:cms/locallang_ttc.xlf:images.addFileReference</createNewRelationLinkTitle>
                                </appearance>
                                <behaviour>
                                    <localizationMode>select</localizationMode>
                                    <localizeChildrenAtParentLocalization>1</localizeChildrenAtParentLocalization>
                                </behaviour>
                            </config>
                        </TCEforms>
                    </masonryTileImage>
                    <link>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Link to Page or a File or a Content-Element</label>
                            <config>
                                <type>input</type>
                                <size>30</size>
                                <eval>trim</eval>
                                <softref>typolink</softref>
                                <wizards>
                                    <_PADDING>2</_PADDING>
                                    <link>
                                        <type>popup</type>
                                        <title>Link</title>
                                        <icon>EXT:backend/Resources/Public/Images/FormFieldWizard/wizard_link.gif</icon>
                                        <module type="array">
                                            <name>wizard_link</name>
                                        </module>
                                        <icon>link_popup.gif</icon>
                                        <JSopenParams>height=500,width=500,status=0,menubar=0,scrollbars=1</JSopenParams>
                                    </link>
                                </wizards>
                            </config>
                        </TCEforms>
                    </link>
                    <backgroundcolor>
                        <TCEforms>
                            <label>LLL:EXT:lth_package/Resources/Private/Language/backend.xlf:masonrytile.backgroundcolor</label>
                            <config>
                                <type>select</type>
                                <default>none.gif</default>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0"></numIndex>
                                    </numIndex>
                                </items>
                                <fileFolder>EXT:lth_package/Resources/Public/Icons/SysColors/</fileFolder>
                                <fileFolder_extList>png,jpg,jpeg,gif</fileFolder_extList>
                                <fileFolder_recursions>0</fileFolder_recursions>
                                <size>1</size>
                                <minitems>0</minitems>
                                <maxitems>1</maxitems>
                                <selicon_cols>8</selicon_cols>
                            </config>
                        </TCEforms>
                    </backgroundcolor>
                    <fixColorBoxes>
                        <TCEforms>
                            <config>
                                <type>user</type>
                                <userFunc>user_lthpackageflex_addFieldsToFlexForm->fixColorBoxes</userFunc>
                            </config>
                        </TCEforms>
                    </fixColorBoxes>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>